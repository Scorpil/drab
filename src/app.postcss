@import url("$site/highlight.postcss");

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	.btn {
		@apply rounded bg-teal-700 px-3 py-1 font-semibold text-white transition hover:bg-opacity-90 active:scale-95 disabled:cursor-not-allowed disabled:bg-gray-400 disabled:text-white;
	}
	.card {
		@apply rounded border bg-white p-2 shadow;
	}
}

@layer utilities {
	.text-balance {
		text-wrap: balance;
	}
}
